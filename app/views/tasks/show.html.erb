<div class="container">
    <h1>Tasks: <%= @task.title %></h1>
    <p><%= @task.details %></p>
    <p><%= @task.completed %></p>
    <%= link_to tasks_path, class: "btn btn-primary" do%>
    <i class="fa-solid fa-house"></i>
    <% end %>
    <%= link_to "Edit +", edit_task_path, class: "btn btn-light"  %>
    <%= link_to "Delete-", task_path(@task), class: "btn btn-danger", 
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
</div>